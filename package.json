{
  "name": "@elementary/action-appcenter-review-checklist",
  "version": "1.0.0",
  "description": "Adds a checklist to application PRs",
  "private": true,
  "main": "index.js",
  "license": "GPLV3",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elementary/action-appcenter-review-checklist.git"
  },
  "scripts": {
    "build": "ncc build src/index.js -o dist --source-map",
    "test": "ava --serial",
    "lint": "standard",
    "release": "semantic-release"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^5.1.1"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.6",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@vercel/ncc": "^0.38.1",
    "ava": "^6.1.3",
    "nock": "^13.5.4",
    "semantic-release": "^24.1.1",
    "standard": "^17.1.0"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "action.yml",
            "dist/**/*.{js,map}",
            "package.json"
          ]
        }
      ]
    ]
  }
}